<% extend('layout') %>

<div class="event-form-container">
    <h2>Add New Event</h1>
    
    <form action="/events/create" method="POST" enctype="multipart/form-data" class="create-event-form">
        <label for="event-name">Event Name:</label>
        <input type="text" id="event-name" name="event-name" required placeholder="The Dance Thread">

        <div class="form-separator"></div>
        <h3 class="event-form-section-header">Description</h2>

        <label for="event-headline">Headline:</label>
        <input type="text" id="event-headline" name="event-headline" placeholder="Asia's premier inclusive community">

        <label for="event-body">Body:</label>
        <textarea id="event-body" name="event-body" placeholder="Dance, share, celebrate yourself!"></textarea>

        <label for="event-cta">Call to Action:</label>
        <input type="text" id="event-cta" name="event-cta" placeholder="Join the movement!">

        <div class="form-separator"></div>
        <h3 class="event-form-section-header">Dance Styles</h2>
        
        <div class="style-checkbox-container">
            <label for="salsa">
                <input class="event-style-checkbox" type="checkbox" id="salsa" name="event-style" value="salsa">
                <div class="custom-checkbox"></div>
                Salsa
            </label>
            <label for="bachata">
                <input class="event-style-checkbox" type="checkbox" id="bachata" name="event-style" value="bachata">
                <div class="custom-checkbox"></div>
                Bachata
            </label>
            <label for="kizomba">
                <input class="event-style-checkbox" type="checkbox" id="kizomba" name="event-style" value="kizomba">
                <div class="custom-checkbox"></div>
                Kizomba
            </label>
            <label for="zouk">
                <input class="event-style-checkbox" type="checkbox" id="zouk" name="event-style" value="zouk">
                <div class="custom-checkbox"></div>
                Zouk
            </label>
        </div>
        <label for="other">Other</label>
        <input type="text" id="other" name="event-style">

        <div class="form-separator"></div>
        <h3 class="event-form-section-header" class="event-form-section-header">Venue</h2>

        <label for="event-venue-country">Country:</label>
        <input type="text" id="event-venue-country" name="event-venue-country" required>
        <label for="event-venue-city">City:</label>
        <input type="text" id="event-venue-city" name="event-venue-city" required>

        <label for="event-venue-name">Venue:</label>
        <input type="text" id="event-venue-name" name="event-venue-name" required>

        <label for="event-venue-url">Location:</label>
        <input type="text" id="event-venue-url" name="event-venue-url" placeholder="Google Maps link">

        <div class="form-separator"></div>
        <h3 class="event-form-section-header">Date</h2>
        <label for="event-date">Date:</label>
        <input type="date" id="event-date" name="event-date" required>

        <div class="form-separator"></div>
        <h3 class="event-form-section-header">Social Media</h2>

        <div class="event-sns-container">
        </div>
        <button type="button" id="event-add-sns">Add Link</button>

        <div class="form-separator"></div>
        <h3 class="event-form-section-header">Flyer</h2>
        <label for="event-flyer">Upload Image:</label>
        <input type="file" accept="image/*" id="event-flyer" name="event-flyer">

        <button type="submit" class="submit-event">Add Event</button>

    </form>
</div>