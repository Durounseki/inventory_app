<% extend('layout') %>

<div class="profile-container">
    <section class="user-banner">
        <a href="/community/<%=user.username%>">
            <figure class="profile-picture">
                <%- user.avatar %>
            </figure>
        </a>
        <div class="user-intro">
            <div class="user-greeting">
                <h1 class="name"><%= user.name %></h1>
                <p class="user-header"><%= user.greeting %></h2>
            </div>
            <div class="user-dashboard">
                <ul class="user-stats">
                    <li><a href="./following"><b><%= user.totalFollowing %></b> following</a></li>
                    <li><a href="./followers"><b><%= user.totalFollowedBy %></b> followers</a></li>
                </ul>
                <ul class="user-actions">
                    <% for(let link of userActions) { %>
                        <li class="user-action">
                            <form action="<%= link.route %>" method="POST">
                                <input type="hidden" name="username" value="<%= user.username %>">
                                <button type="submit"><%= link.name %></button>
                            </form>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </section>
    <section class="user-details">
        <nav>
            <ul>
                <% for(let link of userTabs) { %>
                    <li class="<%= link.class %>" >
                        <div class="tab-filler"></div>
                        <div class="tab-filler"></div>
                        <a href="<%= link.href %>"><%= link.name %></a>
                    </li>
                <% } %>
            </ul>
        </nav>
        <div class="details-content">
            <% if(editProfile){ %>
                <%- include("./partials/profile-edit.ejs",{user: user}) %>
            <% }else if(profileSettings){ %>
                <%- include("./partials/profile-settings.ejs",{user: user}) %>
            <% } %>
        </div>
    </section>
</div>